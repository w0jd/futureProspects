                </tr>*@
                    <a style="none" asp-controller="Offer" asp-action="jobOffer" asp-route-id="@offer.Id">
                    <div class="jobOffer">
                     <form class="jobForm">
                       <div class="jobOfferImg">
                        <img src="../media/logo_polsl.png"alt="logo">
                       </div>
                       <div class="content">
                        <p class="none"> @offer.Id</p> 
                        <h4>@offer.OfferTitle</h4>
                        <h5>@obj.CompanyName</h5>
                        <p>@offer.OfferDescription</p>
                        <div class="tags">
                          @{
                             var array = offer.Tags.Split(";");
                             foreach (string element in array)
                             {
                              <div class="tag">@element </div>
                             }
                          }
                        </div>
                      </div>
              
                     </form>
                    </div>
                    </a>
            
            }          
    }
    </div>
